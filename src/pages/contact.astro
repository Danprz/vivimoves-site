---
import BaseHead from '../components/BaseHead.astro';
import Header   from '../components/Header.astro';
import Footer   from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="fr">
  <head>
	<BaseHead title={`Contact · ${SITE_TITLE}`} />
  </head>

  <body class="antialiased">
    <Header />

    <!-- HERO ----------------------------------------------------------->
    <section
      class="bg-[#FFFCFA] relative w-full px-4 py-24
             flex flex-col items-center text-center"
    >
      <!-- sombra bajo el header -->
      <div
        class="pointer-events-none absolute inset-x-0 -top-6 h-6
               bg-gradient-to-b from-black/10/5 to-transparent"
      ></div>

      <h1 class="text-4xl md:text-6xl font-extrabold text-[#331c10] mb-6">
        Contactez&nbsp;moi
      </h1>
      <p class="max-w-2xl text-[#331c10]/80">
        Une question&nbsp;? Besoin d’un accompagnement personnalisé&nbsp;?<br />
        Je serai ravie de discuter de vos objectifs et de la meilleure façon
        de vous aider à bouger !
      </p>
    </section>

    <!-- SECTION COORDONNÉES ------------------------------------------->
    <section class="bg-[#FFD6BA] py-20">
      <div class="max-w-4xl mx-auto px-4 grid gap-12 md:grid-cols-3">
        <!-- Carte email -->
        <div
          class="flex flex-col items-center rounded-2xl bg-white shadow-xl p-10
                 transition hover:-translate-y-2 hover:shadow-2xl"
        >
          <svg
            class="h-12 w-12 text-[#d89a6b] mb-4"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M2 4a2 2 0 012-2h16a2 2 0 012 2v16a2
                 2 0 01-2 2H4a2 2 0 01-2-2V4zm2 .5v.511l8
                 6.222 8-6.222V4.5H4z"
            />
          </svg>
          <h3 class="text-xl font-semibold text-[#331c10] mb-2">Email</h3>
          <a
            href="mailto:virginiavallejo561@gmail.com"
            class="text-[#d89a6b] font-medium underline hover:text-[#331c10]"
            >Contactez-moi</a
          >
        </div>

        <!-- Carte téléphone -->
        <div
          class="flex flex-col items-center rounded-2xl bg-white shadow-xl p-10
                 transition hover:-translate-y-2 hover:shadow-2xl"
        >
          <svg
            class="h-12 w-12 text-[#d89a6b] mb-4"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M2 5.25C2 4.007 3.007 3 4.25 3h2A1.75
                 1.75 0 018 4.75v3A1.75 1.75 0 016.25
                 9.5H5.5a9.753 9.753 0 004.217 4.217v-.75A1.75
                 1.75 0 0111.467 10h3a1.75 1.75 0 011.75
                 1.75v2c0 1.243-1.007 2.25-2.25 2.25A12.25
                 12.25 0 012 5.25z"
            />
          </svg>
          <h3 class="text-xl font-semibold text-[#331c10] mb-2">Téléphone</h3>
          <a
            href="tel:+330600000000"
            class="text-[#d89a6b] font-medium underline hover:text-[#331c10]"
            >+33&nbsp;06&nbsp;00&nbsp;00&nbsp;00&nbsp;00</a
          >
        </div>

        <!-- Carte Instagram -->
        <div
          class="flex flex-col items-center rounded-2xl bg-white shadow-xl p-10
                 transition hover:-translate-y-2 hover:shadow-2xl"
        >
          <svg
            class="h-12 w-12 text-[#d89a6b] mb-4"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M7 2C4.243 2 2 4.243 2 7v10c0 2.757
                 2.243 5 5 5h10c2.757 0 5-2.243
                 5-5V7c0-2.757-2.243-5-5-5H7zm10
                 2a3 3 0 013 3v10a3 3 0 01-3
                 3H7a3 3 0 01-3-3V7a3 3 0 013-3h10z"
            />
            <path
              d="M12 7a5 5 0 100 10 5 5 0 000-10zm0
                 2a3 3 0 110 6 3 3 0 010-6zM17.5
                 6a1.5 1.5 0 100 3 1.5 1.5 0 000-3z"
            />
          </svg>
          <h3 class="text-xl font-semibold text-[#331c10] mb-2">Instagram</h3>
          <a
            href="https://www.instagram.com/virginia.moves/"
            target="_blank"
            class="text-[#d89a6b] font-medium underline hover:text-[#331c10]"
            >@virginia.moves</a
          >
        </div>
      </div>
    </section>

    <!-- FORMULAIRE DE CONTACT ----------------------------------------->
    <section class="bg-[#FFFCFA] py-24">
      <div class="max-w-3xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-[#331c10] mb-8 text-center">
          Envoyez-moi un message
        </h2>

        <form
          action="https://formspree.io/f/xyzjkvae" method="POST"
          class="grid gap-6"
        >
          <input
            type="text" name="name" placeholder="Nom complet"
            required
            class="w-full rounded-lg border border-[#FFD6BA] bg-white
                   px-5 py-3 text-[#331c10] placeholder-[#331c10]/50
                   focus:outline-none focus:ring-2 focus:ring-[#d89a6b]"
          />

          <input
            type="email" name="email" placeholder="Email"
            required
            class="w-full rounded-lg border border-[#FFD6BA] bg-white
                   px-5 py-3 text-[#331c10] placeholder-[#331c10]/50
                   focus:outline-none focus:ring-2 focus:ring-[#d89a6b]"
          />

          <textarea
            name="message" rows="6" placeholder="Votre message"
            required
            class="w-full rounded-lg border border-[#FFD6BA] bg-white
                   px-5 py-3 text-[#331c10] placeholder-[#331c10]/50
                   focus:outline-none focus:ring-2 focus:ring-[#d89a6b]"
          ></textarea>

          <button
            type="submit"
            class="mx-auto mt-2 inline-block rounded-lg bg-[#d89a6b]
                   px-8 py-3 text-white font-semibold tracking-wide
                   transition-colors hover:bg-[#331c10]"
          >
            Envoyer
          </button>
        </form>
      </div>
    </section>

    <Footer />
  </body>
</html>
