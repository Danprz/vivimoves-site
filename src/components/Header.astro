<style>
	header {
	padding: 0.75rem;
	background: var(--clr-50);
	box-shadow: 0 2px 8px rgba(0, 0, 0, .04);
}

nav {
	display: flex;
	align-items: center;
}

/* Desktop */
h2 {
	flex: 0 0 auto;
	margin: 0;
}

.internal-links {
	flex: 1 1 auto;
	display: flex;
	justify-content: center;
}

.social-links {
	flex: 0 0 auto;
	margin-left: auto;
	display: flex;
}

/* enlaces */
nav a {
	padding: 1rem .75rem;
	color: var(--clr-900);
	text-decoration: none;
	border-bottom: 4px solid transparent;
	transition: color .2s, border-color .2s;
}

nav a:hover {
	color: var(--clr-600);
}

nav a.active {
	border-bottom-color: var(--clr-400);
}

/* ðŸ’¡ Mobile */
@media (max-width: 640px) {
	nav {
		flex-wrap: wrap;           /* permite varias filas */
		row-gap: 0.25rem;
	}

	/* 1Âª fila: logo izquierda, IG derecha */
	h2 {
		order: 0;
	}

	.social-links {
		order: 1;
		margin-left: auto;        /* se empuja a la derecha */
	}

	/* 2Âª fila: enlaces centrados ocupando todo el ancho */
	.internal-links {
		order: 2;
		width: 100%;
		justify-content: center;
		margin-top: 0.25rem;
	}

	.internal-links a {
		padding: 0.5rem 0.5rem;
		font-size: 0.9rem;
		white-space: nowrap;
	}
}
</style>