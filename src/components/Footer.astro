---
const today = new Date();
---

<footer>
  <p class="footer-brand">
    &copy; {today.getFullYear()} Virginia Moves. Tous droits réservés.
  </p>
  <p class="footer-credit">
    Made by <span class="footer-credit-name">Daniprz</span>
  </p>
</footer>

<style>
  footer {
    padding: 2em 1em 4em 1em;
    background: var(--clr-50);
    color: var(--clr-900);
    text-align: center;
    font-size: 0.95rem;
  }

  .footer-brand {
    margin: 0 0 .25rem 0;
    font-weight: 500;
  }

  .footer-credit {
    margin: 0;
    font-size: 0.85rem;
    opacity: 0.8;
  }

  .footer-credit-name {
    font-weight: 600;
  }

  @media (max-width: 640px) {
    footer {
      padding-bottom: 3em;
      font-size: 0.9rem;
    }
    .footer-credit {
      font-size: 0.8rem;
    }
  }
</style>
